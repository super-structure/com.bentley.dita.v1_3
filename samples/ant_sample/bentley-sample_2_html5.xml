<project name="bentley-sample_2_html5" default="samples.html5" basedir=".">

  <property name="dita.dir" location="${basedir}/../../../../"/>

  <target name="samples.html5" description="build the Bentley topic HTML5 samples" depends="clean.samples.html5">
    <ant antfile="${dita.dir}/build.xml">
      <property name="args.input" location="${dita.dir}/plugins/com.bentley.dita.v1_3/samples/dtd/m-map.xml"/>
      <property name="output.dir" location="${dita.dir}/out/samples/bentley-dita-sample"/>
      <property name="args.html5.toc" value="toc"/>
      <property name="transtype" value="html5"/>
    </ant>
  </target>
  
  <target name="clean.samples.html5" description="remove the sample Bentley html5 output">
    <delete dir="${dita.dir}/out/samples/bentley-dita-sample"/>
  </target>

</project>
